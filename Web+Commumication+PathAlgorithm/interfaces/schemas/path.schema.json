{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AGV Global Path",
  "type": "object",
  "additionalProperties": false,
  "required": ["frame", "waypoints", "total_cost", "created_ms"],
  "properties": {
    "path_id": {
      "type": "string",
      "minLength": 1,
      "description": "Optional identifier to trace path generation"
    },
    "frame": {
      "type": "string",
      "minLength": 1,
      "description": "Coordinate frame for waypoints"
    },
    "waypoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["x", "y"],
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" },
          "theta": {
            "type": "number",
            "minimum": -3.1415926535,
            "maximum": 3.1415926535,
            "description": "Optional heading in radians"
          }
        }
      }
    },
    "total_cost": {
      "type": "number",
      "minimum": 0,
      "description": "Aggregate cost from planner"
    },
    "created_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix time in milliseconds when path was created"
    }
  }
}
