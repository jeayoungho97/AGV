{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AGV Items",
  "type": "object",
  "additionalProperties": false,
  "required": ["items", "timestamp_ms"],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "qty"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "qty": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix time in milliseconds when items were generated"
    }
  }
}
